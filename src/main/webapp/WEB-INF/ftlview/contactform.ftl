<section id="contact" style="padding: 150px 0;">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Contact Us</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form id="contactForm" novalidate>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input class="form-control" id="inputName" type="text" placeholder="Your Name *" required>
                   <p class="invalid-feedback">Please enter your name.</p>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="inputEmail" type="email" placeholder="Your Email *" required>
                    <p class="invalid-feedback">Please enter your valid email address.</p>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="inputMobile" type="tel" placeholder="Your Phone">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <textarea class="form-control" id="inputContent" placeholder="Your Message *" required></textarea>
                    <p class="invalid-feedback">Please enter a message.</p>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="button">Send Message</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>